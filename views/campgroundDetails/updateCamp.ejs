<% layout('layouts/style') %>
    <div class="row">
        <h1 class="text-center">Edit The Camp_ground</h1>
        <div class="col-6 offset-3">
            <form action="/campground/<%= editCamp._id %>?_method=put" method="post" class="validated-form" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title ::</label>
                    <input type="text" class="form-control" id="title" name="camp[title]" value="<%= editCamp.title %>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location ::</label>
                    <input type="text" class="form-control" id="location" name="camp[location]"
                        value="<%= editCamp.location %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div> 
                <div class="mb-3">
                    <label for="description" class="form-label">Description ::</label>
                    <textarea class="form-control" id="description" name="camp[description]"
                        required><%=editCamp.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <div class="form-file custom-file">
                        <input type="file" class="form-file-input" id="image" name="image" multiple>
                        <label for="image" class="form-file-label">
                            <span class="form-file-text custom-file-label">Choose Images files..</span>
                            <span class="form-file-button">Browse</span>
                        </label>
                    </div>
                </div>

                <div class="mb-3">
                    <% editCamp.images.forEach((imgs,i)=>{%> 
                        <img src="<%= imgs.thumbnail %> " class="img-thumbnail" alt="" >
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%=imgs.filename%>">
                        </div>
                        <label for="image-<%= i %>">Delete</label>
                    <% })  %> 

                   </div>
                <div class="mb-3"><button class="btn btn-success">Update</button></div>
            </form>
            <div class="mb-3">
                <a class="btn btn-info" href="/campground">Back to home page</a>
            </div>
        </div>
    </div>